@model IEnumerable<BlogModel.Post>

@{
    ViewData["Title"] = "EditIndex";
}


<div class="row">
  
    <div class="col-md-4 col-md-offset-3 SPost">

        <h2>Archived Posts</h2>
        @{ var recentCount = 0; }
        @foreach (var item in Model)
        {

            <article>
                <h5>  @Html.DisplayFor(model => item.PubDate)</h5>
                @{string title = item.Title;
                }
                <h4> @Html.ActionLink(item.Title, "Edit", new { id = item.Id })</h4><br />
                <a href="/post/edit/@item.Id"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                <a href="/post/delete/@item.Id"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>

            </article>

                    }

    </div>
</div>
<div>
    <a class="indexList" asp-action="Index">Back to List</a>
</div>